<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size_2x"
        android:layout_marginTop="?android:actionBarSize"
        android:background="@color/primary" />

    <ScrollView
        style="@style/ScrollView"
        android:paddingLeft="@dimen/keyline_content"
        android:paddingRight="@dimen/keyline_content"
        android:paddingTop="?android:actionBarSize">

        <LinearLayout
            android:id="@+id/container_V"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/keyline"
            android:paddingLeft="@dimen/space_large"
            android:paddingRight="@dimen/space_large"
            android:paddingTop="@dimen/space_normal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_radius">

                <com.code44.finance.views.OverviewGraphView
                    android:id="@+id/overviewGraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/keyline" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                app:cardCornerRadius="@dimen/card_radius">

                <com.code44.finance.views.AccountsView
                    android:id="@+id/accounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.code44.finance.views.FabImageButton
        android:id="@+id/newTransaction"
        android:layout_width="@dimen/btn_fab"
        android:layout_height="@dimen/btn_fab"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/color"
        android:layout_marginRight="@dimen/keyline"
        android:layout_marginTop="@dimen/btn_fab_half_negative"
        android:elevation="@dimen/elevation_fab"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_new"
        tools:ignore="RtlHardcoded,UnusedAttribute"
        tools:tint="@color/text_primary" />
</RelativeLayout>