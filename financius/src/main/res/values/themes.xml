<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/brand</item>
        <item name="android:colorPrimaryDark">@color/brand_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorControlHighlight">@color/accent_transparent</item>
        <item name="android:navigationBarColor">?android:colorPrimaryDark</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/bg_window</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="spbStyle">@style/ProgressBar</item>
        <item name="cpbStyle">@style/CircularProgressBar</item>
    </style>

    <style name="BaseButton" parent="android:Widget.Material.Light.Button" />

    <style name="BaseButtonSmall" parent="android:Widget.Material.Light.Button.Small" />

    <style name="BaseButtonBorderless" parent="android:Widget.Material.Light.Button.Borderless" />

    <style name="ProgressBar" parent="SmoothProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
        <item name="spb_stroke_separator_length">4dp</item>
        <item name="spb_sections_count">5</item>
        <item name="spb_speed">1.0</item>
        <item name="spb_progressiveStart_speed">1.0</item>
        <item name="spb_progressiveStop_speed">1.5</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/progress_bar_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
    </style>

    <style name="CircularProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_color">@color/cpb_default_color</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/text_primary_inverse</item>
        <item name="android:textAppearanceLargePopupMenu">@style/ToolbarPopupTextAppearance</item>
        <item name="android:colorControlNormal">@color/text_primary_inverse</item>
        <item name="android:colorControlHighlight">@color/accent_transparent</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:elevation">@dimen/elevation_header</item>
        <item name="android:background">?android:colorPrimary</item>
    </style>

    <style name="ToolbarPopupTextAppearance" parent="@android:style/TextAppearance.Material.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>