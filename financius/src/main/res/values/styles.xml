<resources>

    <!-- TextAppearance -->
    <!-- =========================================================================================================== -->
    <style name="Text" parent="android:TextAppearance.Holo" />

    <style name="Text.Body1" parent="android:TextAppearance.Holo" />

    <style name="Text.Body2" parent="android:TextAppearance.Holo.Medium" />

    <style name="Text.Subhead" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Caption" parent="android:TextAppearance.Holo.Small" />

    <style name="Text.Title" parent="android:TextAppearance.Holo.Large" />

    <style name="Text.Headline" parent="android:TextAppearance.Holo.Large" />

    <style name="Text.Headline.Inverse" parent="android:TextAppearance.Holo.Large.Inverse" />

    <style name="Text.Headline.Inverse.Secondary" parent="android:TextAppearance.Holo.Large.Inverse">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <!-- Button -->
    <!-- =========================================================================================================== -->
    <style name="Button" parent="android:Widget.Holo.Light.Button" />

    <style name="Button.Small" parent="android:Widget.Holo.Light.Button.Small" />

    <style name="Button.Borderless" parent="android:Widget.Holo.Button.Borderless" />

    <!-- List -->
    <!-- =========================================================================================================== -->

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="ListView.NoDivider">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="ListView.NoDivider.NoSelector">
        <item name="android:listSelector">#0000</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_large</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:minHeight">?android:actionBarSize</item>
    </style>

    <!-- ScrollView -->
    <!-- =========================================================================================================== -->

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fillViewport">true</item>
    </style>

    <!-- Separator -->
    <!-- =========================================================================================================== -->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Divider.Thin">
        <item name="android:layout_height">@dimen/separator_thin</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/separator</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Vertical.Thin">
        <item name="android:layout_width">@dimen/separator_thin</item>
    </style>

    <!-- Separator -->
    <!-- =========================================================================================================== -->

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.Title">
        <item name="android:paddingTop">@dimen/edit_title_padding_top</item>
        <item name="android:background">@color/bg_secondary</item>
    </style>

    <style name="Container.Edit">
        <item name="android:paddingLeft">@dimen/margin_edit_content</item>
        <item name="android:paddingRight">@dimen/margin_edit_content</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:paddingBottom">@dimen/space_large</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
