<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs_PSTS"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:colorPrimary"
        android:elevation="@dimen/elevation_header"
        android:textColor="@color/text_primary_inverse"
        app:pstsDividerColor="@color/bg_primary"
        app:pstsIndicatorColor="?android:colorAccent"
        app:pstsIndicatorHeight="2dp"
        app:pstsTabBackground="@drawable/btn_tab"
        app:pstsUnderlineHeight="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_VP"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>