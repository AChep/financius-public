<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/overviewGraphContainer_V"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorPrimary"
        android:elevation="@dimen/elevation_header">

        <com.code44.finance.views.OverviewGraphView
            android:id="@+id/overviewGraph_V"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyline" />

    </FrameLayout>

    <ScrollView
        style="@style/ScrollView"
        android:layout_below="@+id/overviewGraphContainer_V">

        <LinearLayout
            android:id="@+id/container_V"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_normal"
            android:paddingBottom="@dimen/keyline">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_radius">

                <com.code44.finance.views.AccountsView
                    android:id="@+id/accounts_V"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.code44.finance.views.FabImageButton
        android:id="@+id/newTransaction_FAB"
        android:layout_width="@dimen/btn_fab"
        android:layout_height="@dimen/btn_fab"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/overviewGraphContainer_V"
        android:layout_marginEnd="@dimen/keyline"
        android:layout_marginTop="@dimen/btn_fab_half_negative"
        android:elevation="@dimen/elevation_fab"
        android:src="@drawable/ic_action_new" />
</RelativeLayout>