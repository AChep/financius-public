<?xml version="1.0" encoding="utf-8"?>
<com.code44.finance.views.OverviewGraphView
    android:id="@+id/overviewGraph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_borderless"
    android:orientation="vertical"
    android:padding="@dimen/keyline">

    <TextView
        android:id="@+id/title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_large"
        android:text="@string/expenses"
        android:textColor="@color/primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.code44.finance.graphs.pie.PieChartView
            android:id="@+id/pieChart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/totalExpense"
            style="@style/Text.Display3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_large"
            android:layout_weight="2"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/text_primary_inverse"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</com.code44.finance.views.OverviewGraphView>