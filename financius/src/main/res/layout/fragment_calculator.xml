<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/resultContainer_V"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_primary"
        android:elevation="@dimen/elevation_header">

        <TextView
            android:id="@+id/result_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline"
            android:layout_marginRight="@dimen/keyline"
            android:layout_marginTop="@dimen/keyline"
            android:fontFamily="@string/font_light"
            android:gravity="right"
            android:singleLine="true"
            android:textAppearance="@style/Text.Display3.Secondary"
            tools:text="0.00" />

        <TextView
            android:id="@+id/tempResult_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_TV"
            android:layout_marginLeft="@dimen/keyline"
            android:layout_marginRight="@dimen/keyline"
            android:fontFamily="@string/font_light"
            android:gravity="right"
            android:paddingBottom="@dimen/keyline"
            android:singleLine="true"
            android:textAppearance="@style/Text.Display3.Secondary"
            android:visibility="invisible"
            tools:text="0.00" />

        <View
            android:id="@+id/resultClearer_V"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?android:colorPrimary"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/bg_primary_inverse"
            android:elevation="@dimen/elevation_sub_header"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1">

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number7_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_7" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number8_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_8" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number9_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number4_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_4" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number5_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_5" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number6_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number1_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_1" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number2_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_2" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number3_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.code44.finance.views.SquareButton
                    android:id="@+id/dot_B"
                    style="@style/Button.Calc"
                    android:text="@string/decimal" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.code44.finance.views.SquareButton
                    android:id="@+id/number0_B"
                    style="@style/Button.Calc"
                    android:text="@string/number_0" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.code44.finance.views.SquareButton
                    android:id="@+id/equals_B"
                    style="@style/Button.Calc"
                    android:text="@string/equals"
                    android:textColor="@color/text_accent"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_secondary"
            android:orientation="vertical">

            <Button
                android:id="@+id/delete_B"
                style="@style/Button.Calc.Action"
                android:text="@string/l_delete_short"
                android:textSize="@dimen/text_subhead" />

            <Button
                android:id="@+id/divide_B"
                style="@style/Button.Calc.Action"
                android:text="@string/divide" />

            <Button
                android:id="@+id/multiply_B"
                style="@style/Button.Calc.Action"
                android:text="@string/multiply" />

            <Button
                android:id="@+id/minus_B"
                style="@style/Button.Calc.Action"
                android:text="@string/minus" />

            <Button
                android:id="@+id/plus_B"
                style="@style/Button.Calc.Action"
                android:text="@string/plus" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>